# =============================================================================
# Staging Environment Configuration
# =============================================================================
# Copy this file and replace with actual staging values
# Never commit actual credentials to git
# =============================================================================

# Application
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0
API_VERSION=v1
APP_NAME=production-api-framework

# Server
ALLOWED_ORIGINS=https://staging-api.yourdomain.com,https://staging-app.yourdomain.com

# Database Configuration
DB_HOST=staging-postgres.yourdomain.com
DB_PORT=5432
DB_NAME=production_api_staging
DB_USER=api_user_staging
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=staging-redis.yourdomain.com
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
REDIS_DB=0
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_STAGING
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=REPLACE_WITH_SECURE_REFRESH_SECRET_STAGING
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# CORS Configuration
CORS_ENABLED=true
CORS_CREDENTIALS=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring (if enabled)
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
