{
  "name": "production-api-framework",
  "version": "1.0.0",
  "description": "Production-ready Node.js/TypeScript API demonstrating enterprise-level backend development with DevOps best practices",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/core/database/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/core/database/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/core/database/data-source.ts",
    "migration:show": "npm run typeorm -- migration:show -d src/core/database/data-source.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d src/core/database/data-source.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d src/core/database/data-source.ts",
    "seed": "ts-node --transpile-only src/scripts/seed-data.ts",
    "db:setup": "npm run migration:run && npm run seed"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "api",
    "rest",
    "production",
    "devops",
    "docker",
    "kubernetes",
    "ci-cd"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  }
}
